{
  "name": "scribe-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Frontend for Scribe - Real-time audio translation app",
  "scripts": {
    "dev": "./start-dual-clients.sh",
    "dev:input": "vite --port 5173 --open",
    "dev:translation": "vite --port 5174 --open",
    "kill": "pkill -f 'node'",
    "kill:input": "pkill -f 'vite --port 5173 --open'",
    "kill:translation": "pkill -f 'vite --port 5174 --open'",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-qr-code": "^2.0.18",
    "socket.io-client": "^4.7.2",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/webrtc": "^0.0.40",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
